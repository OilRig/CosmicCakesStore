@model List<CosmicCakes.Models.CakesStartPageModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWithNoMargins.cshtml";
    var sectionCounter = 0;
}

@foreach (var cake in Model)
{

    if (sectionCounter % 2 == 0)
    {
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-right: 0;" id="cakeImagesSetEven">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-right: 0;padding-left: 0;">
                    <img src="/Content/Images/img_13_307x30.jpg" height="300" class="img-responsive hundred-widthed-item" />
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-left: 0; padding-right: 0;">
                    <img src="/Content/Images/img_10_307x30.jpg" height="300" class="img-responsive hundred-widthed-item" />
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 centered-text" id="cakeInfoSet" style="height:100%;">
                <div>
                    <a id="showCake" data-cakeid="@cake.Id">@cake.Name</a>
                    <br />
                    @cake.Description
                    <br />
                    От @cake.MinPrice р.
                </div>
            </div>
        </div>
    }
    else if (sectionCounter % 2 != 0)
    {
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 centered-text">
                <a id="showCake" data-cakeid="@cake.Id">@cake.Name</a>
                <br />
                @cake.Description
                <br />
                От @cake.MinPrice р.
            </div>

            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-left: 0;" id="cakeImagesSetOdd">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-right: 0;padding-left: 0;">
                    <img src="/Content/Images/img_11_307x30.jpg" height="300" class="img-responsive hundred-widthed-item" />
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-left: 0; padding-right: 0;">
                    <img src="/Content/Images/img_12_307x30.jpg" height="300" class="img-responsive hundred-widthed-item" />
                </div>
            </div>
        </div>
    }
    sectionCounter++;
}

<script>
    (function ($) {
        $('#cakes').addClass("active");
        $('a#showCake').click(function () {
            var cakeId = $(this).data("cakeid");
            window.location.href = "/Cake/CakeInfo/" + cakeId;
        });
    })
    (jQuery);
</script>
<script>
    (function ($) {
        $('div#cakeImagesSetEven').mouseover(function () {
            $(this).next().animate({ backgroundColor: '#ededed' }, 'slow');
            //css('background', '#ededed');
        });
        $('div#cakeImagesSetEven').mouseout(function () {
            $(this).next().css('background', 'white');
        });
        $('div#cakeImagesSetOdd').mouseover(function () {
            $(this).prev().animate({ backgroundColor: '#ededed' }, 'slow');
            //css('background', '#ededed');
        });
        $('div#cakeImagesSetOdd').mouseout(function () {
            $(this).prev().css('background', 'white');
        });
    })
    (jQuery);
</script>
