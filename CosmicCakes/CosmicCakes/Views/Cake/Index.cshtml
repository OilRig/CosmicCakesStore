@model List<CosmicCakes.Models.CakesStartPageModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWithNoMargins.cshtml";
    var sectionCounter = 0;
}

@foreach (var cake in Model)
{

    if (sectionCounter % 2 == 0)
    {
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 fader" style="padding-right: 0;" id="cakeImagesSetEven">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-right: 0;padding-left: 0;">
                    <img id="cakeImageFirst" src="@cake.ImagePaths.ElementAt(0)" height="300" class="img-responsive hundred-widthed-item" style="display: block;" />
                    <img id="cakeImageSecond" src="@cake.ImagePaths.ElementAt(1)" height="300" class="img-responsive hundred-widthed-item" />
                </div>
                <div id="changingImagesSet" class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-left: 0; padding-right: 0;">
                    <img id="cakeImageFirst" src="@cake.ImagePaths.ElementAt(2)" height="300" class="img-responsive hundred-widthed-item" style="display: block;" />
                    <img id="cakeImageSecond" src="@cake.ImagePaths.ElementAt(3)" height="300" class="img-responsive hundred-widthed-item" />
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 centered-text" id="cakeInfoSet" style="height: 100%;">
                <span></span>
                <div id="text-container">
                    <a id="showCake" class="cake-name century-gothic-text" data-cakeid="@cake.Id">@cake.Name</a>
                    <br/>
                    <div id="briefCake">
                        @cake.Description
                        <br />
                        <p class="price"> от @cake.MinPrice р.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (sectionCounter % 2 != 0)
    {
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 centered-text">
                <span></span>
                <div id="text-container">
                    <a id="showCake" class="cake-name century-gothic-text" data-cakeid="@cake.Id">@cake.Name</a>
                    <br />
                    <div id="briefCake">
                        @cake.Description
                        <br />
                        <p class="price"> от @cake.MinPrice р.</p>
                    </div>
                </div>
            </div>

            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 fader" style="padding-left: 0;" id="cakeImagesSetOdd">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-right: 0;padding-left: 0;">
                    <img id="cakeImageFirst" src="@cake.ImagePaths.ElementAt(0)" height="300" class="img-responsive hundred-widthed-item" style="display: block;" />
                    <img id="cakeImageSecond" src="@cake.ImagePaths.ElementAt(1)" height="300" class="img-responsive hundred-widthed-item" />
                </div>
                <div id="changingImagesSet" class="col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-left: 0; padding-right: 0;">
                    <img id="cakeImageFirst" src="@cake.ImagePaths.ElementAt(2)" height="300" class="img-responsive hundred-widthed-item" style="display: block;" />
                    <img id="cakeImageSecond" src="@cake.ImagePaths.ElementAt(3)" height="300" class="img-responsive hundred-widthed-item" />
                </div>
            </div>
        </div>
    }
    sectionCounter++;
}

<script>
    (function ($) {
        $(document).ready(function () {
            $('#cakes').addClass("active");
            $('a#showCake').click(function () {
                var cakeId = $(this).data("cakeid");
                window.location.href = "/Cake/CakeInfo/" + cakeId;
            });
        });
    })
        (jQuery);
</script>
<script>
    (function ($) {
        $(document).ready(function () {

            $('div#cakeImagesSetEven').mouseover(function () {
                $(this).next().animate({ backgroundColor: '#ededed' }, 'slow');

            }).mouseout(function () {
                $(this).next().animate({ backgroundColor: 'white' }, 'slow');
            });
          
            $('div#cakeImagesSetOdd').mouseover(function () {
                $(this).prev().animate({ backgroundColor: '#ededed' }, 'slow');

            }).mouseout(function () {
                $(this).prev().animate({ backgroundColor: 'white' }, 'slow');
            });
        });
    })(jQuery);
</script>
<script>
    (function ($) {
        $(document).ready(function () {
            //
        });
    })(jQuery);
</script>
