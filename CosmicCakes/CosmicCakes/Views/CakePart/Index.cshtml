@model CosmicCakes.Models.CakePartsModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 centered-text">
        <div><p class="century-gothic-text">Бисквиты</p></div>
        <ul class="ui-accordion">
            @foreach (var bisq in Model.Bisquits)
            {
                <li class="list-group flying-item">
                    <h3>@bisq.Type </h3>
                    <div style="display: none;">@bisq.Description</div>
                </li>

            }
        </ul>
    </div>

    <div class="col-md-4 centered-text">
        <div><p class="century-gothic-text">Начинки</p></div>
        <ul class="ui-accordion">
            @foreach (var filling in Model.Fillings)
            {
                <li class="list-group flying-item">
                    <h3>@filling.Type </h3>
                    <div style="display: none;">@filling.Description</div>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4 centered-text">
        <div><p class="century-gothic-text">Крем</p></div>
        <ul class="ui-accordion">
            @foreach (var cream in Model.Creams)
            {
                <li class="list-group flying-item">
                    <h3>@cream.Type </h3>
                    <div style="display: none;">@cream.Description</div>
                </li>
            }
        </ul>
    </div>
</div>
<script>
    (function ($) {
            $(document).ready(function () {
                //$(".list-group-item").click(function () {
                //    $(this).next("ul").slideToggle(duration = 100);
                //});
                $("ul.ui-accordion").accordion({
                    active:false,
                    animate: 400,
                    collapsible: true,
                    heightStyle: "content",
                    icons: { "header": "ui-icon-plus", "activeHeader": "ui-icon-minus" }
                });
                var cssOptions = {
                    'backgrond-color': 'red',
                    'cursor': "pointer"
            };
                $("li.list-group-item").mouseover(function () {
                    $(this).css(cssOptions);
                });
                $('li.flying-item').
            });
    })(jQuery);
</script>


