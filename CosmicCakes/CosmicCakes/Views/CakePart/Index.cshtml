@model CosmicCakes.Models.CakePartsModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 centered-text">
        <div><p class="ubuntu-big-text">Бисквиты</p></div>
        <hr class="style-one"/>
        <ul class="ui-accordion">
            @foreach (var bisq in Model.Bisquits)
            {
                <li class="list-group">
                   <h3 style="font-family: 'Century Gothic'; letter-spacing: 3px;"> @bisq.Type</h3>
                    <div style="display: none;">@bisq.Description</div>
                </li>

            }
        </ul>
    </div>

    <div class="col-md-4 centered-text">
        <div><p class="ubuntu-big-text">Начинки</p></div>
        <hr class="style-one" />
        <ul class="ui-accordion">
            @foreach (var filling in Model.Fillings)
            {
                <li class="list-group">
                    <h3 style="font-family: 'Century Gothic'; letter-spacing: 3px;">@filling.Type </h3>
                    <div style="display: none;">@filling.Description</div>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-4 centered-text">
        <div><p class="ubuntu-big-text">Крем</p></div>
        <hr class="style-one" />
        <ul class="ui-accordion">
            @foreach (var cream in Model.Creams)
            {
                <li class="list-group">
                    <h3 style="font-family: 'Century Gothic'; letter-spacing: 3px;">@cream.Type </h3>
                    <div style="display: none;">@cream.Description</div>
                </li>
            }
        </ul>
    </div>
</div>
<script>
    (function ($) {
        $(document).ready(function () {
            $('#cakeParts').addClass("active");
        });
    })
        (jQuery);
</script>
<script>
    (function ($) {
        $(document).ready(function () {
            $("ul.ui-accordion").accordion({
                active: false,
                animate: 400,
                collapsible: true,
                icons: false
        });
        });
    })(jQuery);
</script>


