@model CosmicCakes.Models.UserFeedbackModel

    <div class="row" style="margin-top:30px;">
        <div class="col-sm-3">
            <label>Имя</label>
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Author, htmlAttributes: new { placeholder = "Имя",  @class = "form-control"})
            <p style="color: red;">@Html.ValidationMessageFor(m => m.Author)</p>
        </div>
    </div>

    <div class="row" style="margin-top:30px;">
        <div class="col-sm-3">
            <label>Email</label>
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Email, htmlAttributes: new { placeholder = "Email", @class = "form-control" })
            <p style="color: red;">@Html.ValidationMessageFor(m => m.Email)</p>
        </div>
    </div>

    <div class="row" style="margin-top:30px;">
        <div class="col-sm-3">
            <label>Что Вы о нас думаете?</label>
        </div>
        <div class="col-sm-9">
            @Html.TextAreaFor(m => m.Content, htmlAttributes: new { placeholder = "Ваш отзыв",@class = "form-control",rows = "10" })  
            <p style="color: red;">@Html.ValidationMessageFor(m => m.Content)</p>
        </div>
        
    </div>

