@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;

@model CosmicCakes.Models.HelpRequestModel
@{
    ViewBag.Title = "Cosmic Cakes - Помощь";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-bottom:40px;">
    <div class="col-sm-12">
        <label>Обращение в поддержку</label>
    </div>
</div>

@using (Html.BeginForm("SendHelpRequest", "Home", FormMethod.Post))
{
    <div class="row" style="margin-bottom:20px;">

        <div class="col-sm-1">
            <label>Имя:</label>
        </div>

        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            <p style="color: red;">@Html.ValidationMessageFor(m => m.Name)</p>
        </div>
    </div>

    <div class="row" style="margin-bottom:20px;">

        <div class="col-sm-1">
            <label>Отчество:</label>
        </div>

        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control" })
        </div>
    </div>

    <div class="row" style="margin-bottom:20px;">

        <div class="col-sm-1">
            <label>Email:</label>
        </div>

        <div class="col-sm-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <p style="color: red;"> @Html.ValidationMessageFor(m => m.Email)</p>
        </div>
    </div>

    <div class="row" style="margin-bottom:20px;">

        <div class="col-sm-1">
            <label>Обращение:</label>
        </div>

        <div class="col-sm-4">
            @Html.TextAreaFor(m => m.RequestText, new { @class = "form-control" })
            <p style="color: red;"> @Html.ValidationMessageFor(m => m.RequestText) </p>
        </div>
    </div>

    <div class="row" style="margin-bottom:20px;">
        <div class="col-sm-3">
            <label>Введите символы с картинки</label>
        </div>
    </div>

    <div class="row" style="margin-bottom:20px;">
        <div class="col-sm-8">
            @Html.Captcha(5)
            <p style="color: red;">@Html.ValidationMessage("CAPTCHA")</p>
        </div>
    </div>
   

    <button type="submit" class="btn btn-default want-cake-button">Отправить</button>
}

